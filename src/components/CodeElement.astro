---
interface Props {
    classes?: string,
    id?: string,
    preclass?: string,
    preid?: string
}

function getAnim(animName: string): string {
    let x = Math.random()
    return "animation: " + (2 + x) + "s infinite "+animName+";"
}

const {classes="", id="", preclass="", preid=""} = Astro.props as Props
---

<code class={"border "+classes} id={id} style={getAnim("anim-translate")}>
    <pre class={preclass} id={preid} style={getAnim("anim-rotate")}><slot/></pre>
</code>